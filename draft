
# Guess The Number Game

import random

# number = random.randint(1, 100)
attempts = 0
game = True

def play_again():
    global game
    valid_response = False
    while not valid_response:
        play_again_answer = input("Would you like to play again, type 'yes' or 'no'?")
        if play_again_answer == "yes":
            game = True
            valid_response = True
        elif play_again_answer == "no":
            game = False
            valid_response = True
        else:
            print("Please enter a valid response either 'yes' or 'no'.")
            valid_response = False


def choose_difficulty():
    while True:
        difficulty = input("Choose a difficulty. Type 'easy' or 'hard': ")
        if difficulty == "easy":
            return 10
        elif difficulty == "hard":
            return 5
        print("Invalid input. Please type 'easy' or 'hard'.")


def main_game():
    global game
    print(f"You have {attempts} remaining to guess the number. ")
    player_guess = int(input("Make a guess: "))
    if player_guess == number:
        print(f"You got it! The answer was {number}.")
        game = False
    elif player_guess < number:
        print("Too low.\nGuess again.\n")
    elif player_guess > number:
        print("Too high.\nGuess again.\n")

while game:
    # print(art2.logo)
    number = random.randint(1, 100)
    print("Welcome to the Number Guessing Game!\n")
    print("I'm thinking of a number between 1 and 100.\n")
    attempts = choose_difficulty()
